#include <stdio.h>
#include <stdlib.h>
#include <string.h>
int cucaracha(void)
{
char pregunta[9];
char adivinanza[10]={"cucaracha"};
printf("Mi tia Cuca tiene una mala racha, Â¿quien sera esta muchacha?  ");
scanf("%s", pregunta);
short result= strcmp (pregunta, adivinanza);
if (result==0) printf("Muy Bien!");
else printf("NOOOOO!");
return 0;
}


int murcielago(void)
{
char pregunta[10];
char adivinanza[11]={"murcielago"};
