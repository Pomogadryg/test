int caracol(void)
{
char pregunta[7];
char adivinanza[8]={"caracol"};
printf("Soy pequeno y blandito y mi casa llevo sobre el lomito.  ");
scanf("%s", pregunta);
short result= strcmp (pregunta, adivinanza);
if (result==0) printf("Muy Bien!");
else printf("NOOOOO!");
