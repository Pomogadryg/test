}

int main(int argc, char** argv) {
    cucaracha();
    printf("\r\n\r\n");
    murcielago();
    printf("\r\n\r\n");
    rana();
    printf("\r\n\r\n");
    buho();
    printf("\r\n\r\n");
    caracol();
    printf("\r\n\r\n");

    printf("\r\n\r\n");
    

    return (EXIT_SUCCESS);
}

